                <h2 class="h2-item">Pasta/Grains</h2>
                    <ul>
                        <% items.forEach(function(i) { %>
                            <% if (i.category === 'Pasta/Grains') { %>
                                <li>
                                    <%= i.item %> -
                                    <%= i.quantity %> -
                                    <%= i.expiration %>
                                    <form action="/items/<%= i.id %>?_method=DELETE"
                                        id="delete-form" method="POST">
                                        <button type='submit'>X</button>
                                    </form>
                                    <a href="/items/<%= i.id %>/edit"
                                        id="edit-form">
                                        <button type='submit'>✎</button>
                                    </a>
