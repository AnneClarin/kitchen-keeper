<%- include('../partials/header') %>

    <div id="pantry">
        <h1 class="odd">P</h1>
        <h1 class="even">A</h1>
        <h1 class="odd">N</h1>
        <h1 class="even">T</h1>
        <h1 class="odd">R</h1>
